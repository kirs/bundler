#!/usr/bin/env ruby

# Exit cleanly from an early interrupt
Signal.trap("INT") { exit 1 }

require 'bundler'
require 'bundler/cli'

# Check if an older version of bundler is installed
Bundler::CLI.check_old_versions!

# Force Thor to raise exceptions so we can exit non-zero.
ENV["THOR_DEBUG"] = "1"

require 'bundler/friendly_errors'

ui = Bundler::UI::Shell.new
ui.error "It's recommended to use Bundler through 'bundle' binary instead 'bundler'"

Bundler.with_friendly_errors { Bundler::CLI.start }
